<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/mid_wallet_sum"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView7"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сумма:"
        android:id="@+id/textView6"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/mid_wallet_sum"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/mid_wallet_spinner"
        android:layout_below="@+id/mid_wallet_sum"
        android:layout_alignStart="@+id/mid_wallet_sum"
        android:layout_toStartOf="@+id/mid_wallet_curr" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="На счёт:"
        android:id="@+id/textView7"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginLeft="15dp"
        android:layout_alignBottom="@+id/mid_wallet_spinner"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BYR"
        android:id="@+id/mid_wallet_curr"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignParentEnd="true" />
</RelativeLayout>